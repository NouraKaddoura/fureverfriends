

<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Edit Pet</h1>
    <%= form_for @pet do |f| %>

      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
 
      <div class="form-group">
        <label>Species</label>
        <%= f.select :species, options_for_select(["Other","Dog", "Cat", "Bird"]), class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Breed</label>
        <%= f.text_field :breed, class: "form-control", placeholder: "Breed" %>
      </div>

      <div class="form-group">
        <label>Gender</label>
        <%= f.select :gender, options_for_select(["M","F"]), class: "form-control" %>
      </div>

       <div class="form-group">
        <label>Age</label>
        <%= f.text_field :age, class: "form-control", placeholder: "Age" %>
      </div>

       <div class="form-group">
        <label>Location</label>
        <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
      </div>

       <div class="form-group">
        <label>Image</label>
        <%= f.text_field :image_url, class: "form-control", placeholder: "Image URL" %>
      </div>

    <div class="form-group">
        <label>Bio</label>
        <%= f.text_field :bio, class: "form-control", placeholder: "Bio" %>
      </div>

      <%= f.submit "Update Pet", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>